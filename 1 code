 static u8* TX_str;
 void func_TX(void)
 {
		// send the second chararcter in array 
		static u8 TX_index=1;
		// Check for NULL to end the array 
		if(TX_str[TX_index]!='\0')
		{
			UART_SendNoBlock(TX_str[TX_index]);
			TX_index++;	
		}
 }
void func_RX(void)
	{ 
 	}



int main(void)
{
   
/*******************************Initilization *******************************/
	DIO_Init();
	LCD_Init();
	ADC_Init(VREF_VCC,ADC_SCALER_64);
    UART_Init();
/****************************************************************************/
UART_TX_SetCallBack(func_TX);
UART_RX_SetCallBack(func_RX);

UART_TX_InterruptEnable();
UART_RX_InterruptEnable();

LCD_GoTo_WriteString(0,0,"TX");

 sei(); // enable global interrupt
 
u8 timer=0;
u8 str[20];
u8 str2[20]="Nour Ashraf";
UART_SendNoBlock(str2[0]);
TX_str=str2;
    while(1)
    {
		// just timer to check the code
		 LCD_GoTo_WriteNumber(1,10,timer);
		 timer++;
		 _delay_ms(200);
    }
}
 
 

 